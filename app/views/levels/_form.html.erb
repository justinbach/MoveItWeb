<%= form_for @level, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
    <%= f.label :hero_x, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :hero_x, options_for_select((0..9).to_a, @level.hero_x) %>
    </div>
    <%= f.label :hero_y, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :hero_y, options_for_select((0..9).to_a, @level.hero_y) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                levels_path, :class => 'btn' %>
  </div>
<% end %>
